
#bash alias'

alias rehash='source ~/.bashrc'
alias gitmod='git status | grep modified' 
alias lsa='ls -AlFh --color=always'
alias lsd='ls -AlFh --color | grep ^drw'
alias lsnd='ls -AlFh --color | grep -v ^drw'
alias globalnpm='find -P /usr/local/lib/node_modules/ -maxdepth 1 -mindepth 1 -printf "%f\n" | sort -n -k2 | cut -f 1'
alias vimrc='vim + ~/.vim/vimrc'
alias mongodb='mongo'
alias cdv='cd /var/www'
alias grwatch='grunt watch &'
alias grstop='pkill grunt'
alias gr='grunt'
alias v='TERM=screen-256color vi'
alias up='cd ..'
alias back='cd -'
alias ack='ack-grep'
alias rm='rm -i' # prompts before deleting

# Git aliases
alias g='git'
alias status='git status'
alias add='git add'
alias push='git push'
alias pull='git pull'
alias branch='git branch'
alias checkout='git checkout'
alias clone='git clone'

# tmux aliases
alias t='tmux -2'
alias tlist='tmux list-sessions'
alias tvsplit='tmux split-window -h'
alias tsplit='tmux split-window'
alias tswap='tmux swap-pane'

# screen
alias s='screen'
alias sls='screen -ls'
